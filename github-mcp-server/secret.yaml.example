apiVersion: v1
kind: Secret
metadata:
  name: github-mcp-token
  namespace: mcp-servers
  labels:
    app.kubernetes.io/name: github-mcp-server
    app.kubernetes.io/component: secret
    app.kubernetes.io/part-of: k8smcps
type: Opaque
stringData:
  # IMPORTANT: Do not commit the actual token to version control!
  # Replace YOUR_GITHUB_PERSONAL_ACCESS_TOKEN with your actual GitHub PAT
  #
  # To create this secret:
  # 1. Create a GitHub Personal Access Token with appropriate scopes:
  #    - repo (full control of private repositories)
  #    - read:packages (read packages)
  #    - read:org (read organization data)
  #
  # 2. Create the secret using kubectl:
  #    kubectl create secret generic github-mcp-token \
  #      --namespace=mcp-servers \
  #      --from-literal=token=YOUR_GITHUB_PERSONAL_ACCESS_TOKEN
  #
  # OR
  #
  # 3. Copy this file to secret.yaml, replace the placeholder, and apply:
  #    cp secret.yaml.example secret.yaml
  #    # Edit secret.yaml and replace YOUR_GITHUB_PERSONAL_ACCESS_TOKEN
  #    kubectl apply -f secret.yaml
  #    # Then delete secret.yaml or add it to .gitignore

  token: YOUR_GITHUB_PERSONAL_ACCESS_TOKEN
